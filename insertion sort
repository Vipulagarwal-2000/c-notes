#include <iostream>

using namespace std;  //a bad practice // using namespace std


//input function
void input(int arr[], int size){
    for(int i =0; i < size; i++){
        arr[i] = size -i;
        cout << arr[i] << " ";
        
    }
      cout << "\n\n";
}

//sort function
void sorting(int arr[],int si,int li){
    if(si > li){
        return;
    }
  
    for(int i =li; i > si; i--){
        if(arr[i] < arr[i-1]){
            swap(arr[i], arr[i-1]);
        }
    }
}

//insertion sort function
void insertion(int arr[], int size, int si, int li){
    if(si > li){
        return;
    }
    
    sorting(arr, 0 ,si);
   insertion(arr, size, si+1, li);
   
   
    
}


//main function below


int main()
{
    std::cout<<"Hello this is an insertion sort"<< endl;
    
    int size;
    cout << "enter the size ? " <<endl;
    cin >> size;
  
     int * arr = new int[size];
     input(arr, size);
     insertion(arr,size,0 ,size-1);
     cout << "Sorted array : ";
         cout << "\n\n";
     for(int i =0; i < size; i++){
         cout << arr[i] << " ";
     }

    return 0;
}
